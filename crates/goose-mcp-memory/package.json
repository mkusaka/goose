{
  "name": "@mkusaka/mcp-memory-server",
  "version": "0.1.0",
  "description": "A server that uses the Model Context Protocol (MCP) to manage memory storage",
  "author": "mkusaka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkusaka/goose.git"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "model-context-protocol"
  ],
  "type": "module",
  "bin": {
    "mcp-memory": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "inspect": "mcp-inspector dist/index.js",
    "prepublishOnly": "npm run build",
    "prettier:format": "prettier --write .",
    "prettier:format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.2",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
